generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dataBase.db"
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  type     String
}

model Product {
  id          String  @id @default(uuid())
  title       String
  image       String
  description String?
  price       Float
}
